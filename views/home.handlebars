 <link rel="stylesheet" href="/css/style.css"/>
<div class="bs-docs-section">
    <div class="col-lg-12">
        <div class="col-lg-3">
        </div>
        <div class="col-lg-6 signUp">
            <div class="bs-component">
                <dix class="form-horizontal txt_color">
                    <fieldset>
                        <legend>Log-in</legend>
                        <div class="alert alert-dismissible alert-success successPanel hidden">
                        </div>
                        <div class="alert alert-dismissible alert-danger ErrorPanel hidden">
                        </div>
                        <div class="userRegistration">
                            <div class="form-group userName">
                                <label for="inputUserName" class="col-lg-2 control-label">Username</label>
                                <div class="col-lg-10">
                                    <div class="input-group">
                                        <spna class="input-group-addon input-sm">
                                            <span class="glyphicon glyphicon-user "></span>
                                        </spna>
                                        <input type="text" class="form-control input-sm" id="inputUserName" placeholder="Username">
                                    </div>
                                    <div class="msg">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputName" class="col-lg-2 control-label">Name</label>
                                <div class="col-lg-10">
                                    <div class="input-group">
                                        <spna class="input-group-addon input-sm">
                                            <span class="glyphicon glyphicon-user "></span>
                                        </spna>
                                        <input type="text" class="form-control input-sm" id="inputName" placeholder="Name">
                                    </div>
                                    <div class="msg"></div>
                                </div>
                            </div>
                            <div class="form-group userEmail">
                                <label for="inputEmail" class="col-lg-2 control-label">Email</label>
                                <div class="col-lg-10">
                                    <div class="input-group">
                                        <spna class="input-group-addon input-sm">
                                            <span class="glyphicon glyphicon-envelope "></span>
                                        </spna>
                                    <input type="email" class="form-control input-sm" id="inputEmail" placeholder="Email">
                                    </div>
                                    <div class="msg"></div>
                                </div>
                            </div>
                           
                            <div class="form-group">
                                <div class="col-lg-10 col-lg-offset-2">
                                    <button type="reset" class="btn btn-default btn-sm cancel"> <a href="/">Cancel</a></button>
                                    <button type="submit" class="btn btn-info btn-sm signupBtn">Submit</button>
                                </div>
                            </div>
                        </div>
                    </fieldset>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
    </div>
</div>
</div>
